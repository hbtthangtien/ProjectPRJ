        <filter-name>checkLogin</filter-name>
        <url-pattern>/cart</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>Controller.loginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerController</servlet-name>
        <servlet-class>Controller.registerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>serviceController</servlet-name>
        <servlet-class>Controller.serviceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>promotionController</servlet-name>
        <servlet-class>Controller.promotionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homeController</servlet-name>
        <servlet-class>Controller.homeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>detailProductController</servlet-name>
        <servlet-class>Controller.detailProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listProductController</servlet-name>
        <servlet-class>Controller.listProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchControll</servlet-name>
        <servlet-class>Controller.searchControll</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutController</servlet-name>
        <servlet-class>Controller.logoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>shoppingCartController</servlet-name>
        <servlet-class>Controller.shoppingCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>processOnCartController</servlet-name>
        <servlet-class>Controller.processOnCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteController</servlet-name>
        <servlet-class>Controller.deleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>serviceController</servlet-name>
        <url-pattern>/service</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>promotionController</servlet-name>
        <url-pattern>/promotion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>detailProductController</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listProductController</servlet-name>
        <url-pattern>/listproduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchControll</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>shoppingCartController</servlet-name>
        <url-pattern>/cart</url-pattern>
